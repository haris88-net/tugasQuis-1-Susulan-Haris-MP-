<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tvQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUIZ 1"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tvMatkul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Kuliah Mobile Programing TI21K1"

            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            />
        <com.google.android.material.divider.MaterialDivider

            android:id="@+id/div1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </com.google.android.material.divider.MaterialDivider>

        <TextView
            android:id="@+id/tvNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM : 202111003"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama : Abdul Haris Mimbar"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tvKelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelas : Ti21K1"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp">

        </com.google.android.material.divider.MaterialDivider>

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="1. Jawaban NO. 1"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2. Jawaban NO. 2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="3. Jawaban NO. 3"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="4. Jawaban NO. 4"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="5. Jawaban NO. 5"
            android:textSize="20sp"/>

    </LinearLayout>
